        <form action="/review" method="POST">
            <table class="table table-bordered">
                <thead class="thead-dark">
                  <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Country Citizenship</th>
                        <th scope="col">Visa Status</th>
                        <th scope="col">Undergraduate Degree</th>
                        <th scope="col">Semester</th>
                        <th scope="col">Year</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Degree Concentration</th>
                        <th scope="col">GPA</th>
                        <th scope="col">Status</th>
                        <th scope="col">Deferred Semester</th>
                        <th scope="col">Deferred Year</th>
                        <th scope="col">Notes</th>
                        <th scope="col">Edit/Delete</th>
                        
                    </tr>
                </thead>
                <tbody>
                    
  
 <% if(locals.form){ %> <% for(var i = 0; i < form.length; i++) { %>
    <tr>
       <th scope="row"><%= i+1 %> </th>
        <td ><%= form[i].lname %></td>
        <td > <%= form[i].fname %></td>
        <td ><%= form[i].email %></td>
        <td><%= form[i].country %></td>
        <td><%= form[i].visa %></td>
        <td><%= form[i].undergraduate %></td>
        <td><%= form[i].semester %></td>
        <td ><%= form[i].year %></td>
        <td><%= form[i].gender %></td>
        <td><%= form[i].Degree_Con %></td>
        <td ><%= form[i].gpa %></td>
        <td><%= form[i].status %></td>
        <td><%= form[i].defsem %></td>
        <td><%= form[i].defyear %></td>
        <td ><%= form[i].notes %></td>
        <td>
            <a href="/users/review/<%= form[i]._id%>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
            <a href="/users/review/delete/<%= form[i]._id%>" onclick="return confirm('Are you sure to delete this record ?');">
                <i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
        </td>
    </tr>
    <% } %> <% } %>
                </tbody>

            </table>
        </form>

