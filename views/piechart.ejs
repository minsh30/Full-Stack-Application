<head>
    <title>Pie Chart</title>
    <style>
      body {font-family: Lato;}
  
    </style>
  </head>
  <body>

    <div class="container">
      <div class="box-nav d-flex justify-between">
          <a href="/dashboard" class="border-shadow">
              <span class="text-gradient">BACK <i class="fas fa-user"></i></span>
          </a>
      </div>
    <hr>
    <canvas id="myChart"></canvas>
    <!-- Start Js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
    <script>
      let ctx = document.querySelector('#myChart').getContext('2d');
  
      let WD = ' <%= WD%>';  //Initialising ejs tags in javascript
      let AI = '<%= AI%>';
      let CS = '<%= CS%>';
      let G = '<%= G%>';
      let myChart = new Chart(ctx, {
      
        type: 'doughnut',
        data: {
          labels: ["Web and Databases", "Artificial Intelligence","Cyber Security", "General"],
          datasets: [{
            label: 'Course Concentration',
            //data: [<%= WD %>, <%= AI %>, <%= CS %>, <%= G %>],
            data :[WD,AI,CS,G],
            backgroundColor: [
            'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(52, 192, 71, 1)',
              'rgba(232, 153, 255, 0.8)'
               ],
            borderColor: [
            'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(52, 192, 71, 1)',
              'rgba(232, 153, 255, 0.8)'
          ],
        
            borderWidth: 1
          }]
       },
       options:{
              title:{
                  display:true,
                  text:'Course Concentration Visualisation',
                  fontSize:22
              },
              legend:{
                  display:true,
                  position:'right',
                  labels:{
                      fontColor:'#000'
                  }
              },
              layout:{
                  padding:{
                      left:0,
                      right:50,
                      bottom:0,
                      top:0
                  }
              },
              tooltips:{
                  enabled:true
              }
          }
       
      }); // end chart obj
  
  
    </script>
  </body>
  </html>